div(id="accordion")
  div.card
    div.card-header(id="OutputTypeHeader" data-toggle="collapse" data-target="#OutputTypeCollapse" aria-expanded="false" aria-controls="OutputTypeCollapse")
      h5.mb-0
        | Output Types
    div.collapse(id="OutputTypeCollapse" aria-labelledby="OutputTypeHeader" data-parent="#accordion")
      div.card-body
        form(id="OutputTypesForm" method="POST")
          div.form-group
            div.form-row
              div.col-6
                select(id="OutputTypesSelect" name="OutputTypesSelect").form-control.custom-select.formStyle
                  option(value="-1" selected) Add New...
                  each type, index in outputTypes
                    option(value=type.outputType+"|"+type.outputPWM+"|"+type.outputPWMInversion) #{type.outputType}
          div.form-group
            div.form-row
              label(for="OutputTypeName") Output Type
              input(type="text" id="OutputTypeName" name="OutputTypeName" maxlength="32").form-control.formStyle
          div.form-group
            div.form-row
              div.custom-control.custom-switch
                input(id="OutputTypePWM" name="OutputTypePWM" type="checkbox").custom-control-input
                label(for="OutputTypePWM").custom-control-label Output PWM
          div.form-group
            div.form-row
              div.custom-control.custom-switch
                input(id="OutputTypePWMInversion" name="OutputTypePWMInversion" type="checkbox").custom-control-input
                label(for="OutputTypePWMInversion").custom-control-label Output PWM Inversion                


  div.card
    div.card-header(id="OutputHeader" data-toggle="collapse" data-target="#OutputCollapse" aria-expanded="false" aria-controls="OutputCollapse")
      h5.mb-0
        | Outputs
    div.collapse(id="OutputCollapse" aria-labelledby="OutputHeader" data-parent="#accordion")
      div.card-body
        | OUTPUTS FORM

  div.card
    div.card-header(id="SensorHeader" data-toggle="collapse" data-target="#SensorCollapse" aria-expanded="false" aria-controls="SensorCollapse")
      h5.mb-0
        | Sensors
    div.collapse(id="SensorCollapse" aria-labelledby="SensorHeader" data-parent="#accordion")
      div.card-body
        | SENSORS FORM

  div.card
    div.card-header(id="UserHeader" data-toggle="collapse" data-target="#UserCollapse" aria-expanded="false" aria-controls="UserCollapse")
      h5.mb-0
        | Users
    div.collapse(id="UserCollapse" aria-labelledby="UserHeader" data-parent="#accordion")
      div.card-body
        include ./settings_addUserForm.pug

script.
  $().ready(function(){
    settings_OutputTypesForm()
  }