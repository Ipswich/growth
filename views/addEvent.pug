div(role="document").modal-dialog
  div.modal-content
    div.modal-header.modalStyle
      h5 Add Event
      button(type="button" id="modalXButton" data-dismiss="modal" aria-label="Close").close
        span(aria-hidden="true") &times;
    div.modal-body.modalStyle.rounded-bottom
      div.nav-container
        ul(id="pills-tab-event" role="tablist").nav.nav-pills.nav-justified
          li.nav-item
              a(id="nav-time" data-toggle="pill" href="#time" role="tab" aria-controls="time" aria-selected="true").nav-pill.nav-link.active Time
          li.nav-item
              a(id="nav-sensor" data-toggle="pill" href="#sensor" role="tab" aria-controls="sensor" aria-selected="false").nav-pill.nav-link Sensor
          li.nav-item
              a(id="nav-periodic" data-toggle="pill" href="#periodic" role="tab" aria-controls="periodic" aria-selected="false").nav-pill.nav-link Periodic
      br
      div(id="pills-tabContent-event").tab-content
        div(id="time" role="tabpanel" arealabelledby="nav-time").tab-pane.fade.active.show
          include ./addTimeEvent.pug
        div(id="sensor" role="tabpanel" arealabelledby="nav-sensor").tab-pane.fade
          include ./addSensorEvent.pug
        div(id="periodic" role="tabpanel" arealabelledby="nav-periodic").tab-pane.fade
          include ./addPeriodicEvent.pug
          
